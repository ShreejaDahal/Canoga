<MainScreen>:
    name: "main"
    BoxLayout:
        background_color : 'white'
        size_hint : (0.2, 0.2)
        pos_hint : {"center_x": 0.5, "center_y": 0.5}    
        
        Label:
            text:"Welcome to Canoga\n Select your option"
            font_size: 50
            color:'white'
            bold : True

    BoxLayout:
        id: newGame
        size_hint : (0.2, 0.2)
        pos_hint : {"center_x": 0.35, "center_y": 0.2}
        Button:
            text:"New\nGame"
            size_hint:(1, 1)
            font_size : 50
            bold:True
            background_color:'purple'
            on_release:
                app.root.current = "new_game_mode_screen"
                root.manager.transition.direction = "right"
    BoxLayout:
        id: resumeGame
